@import 'normalize.css'
@import 'foundation.min.css'

html
  text-align center
  padding 60px 0

.splash, .new, .error
  margin-top 100px

button
  padding 10px 20px

.voyage
  table
    width 100%

    th
      text-align center

  form
    .row
      text-align left

    label[for='driving']
      margin-top 2px

  #map-canvas
    width 100%
    height 300px

  .directions
    text-align left

    .directions-header
      cursor pointer

footer
  margin-top 100px
  
  .inline-list
    max-width 220px
    margin 0 auto
