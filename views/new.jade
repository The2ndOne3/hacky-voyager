extends layout

block content
  section.new
    .row
      .large-5.large-centered.columns
        h2 Go on a Voyage
        form(method='POST', action='/create')
          .small-12.columns
            input(type='text', name='name', placeholder='Voyage Name', autocomplete="off")
          .small-12.columns
            input(type='text', name='destination', placeholder='Voyage Destination', autocomplete="off")
          hr
          .small-12.columns
            input(type='text', name='owner-name', placeholder='Your Name', autocomplete="off")
          .small-12.columns
            input(type='text', name='owner-location', placeholder='Your Location', autocomplete="off")
          button.submit Create